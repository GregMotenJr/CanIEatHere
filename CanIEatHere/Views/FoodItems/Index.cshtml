@model IEnumerable<CanIEatHere.Models.FoodItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @*@Html.ActionLink("Create New", "Create")*@
    @{ int reviewID = @ViewBag.ReviewID;}
    @Html.ActionLink("Back to Review", "Details","Reviews", new { id = reviewID }, null)
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FoodItemName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ListIngredients)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FoodItemRating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course.CourseType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DietaryRestriction.DietType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DietaryRestriction1.DietType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DietaryRestriction2.DietType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Review.UserID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FoodItemName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ListIngredients)
        </td>
        <td>
            @{int foodItemRating = (item.FoodItemRating); }
            @if (foodItemRating == 1)
            {
                <div class="rating">
                    <span class="on">★</span><span>☆</span><span>☆</span><span>☆</span><span>☆</span>
                </div>
            }
            else if (foodItemRating == 2)
            {
                <div class="rating">
                    <span class="on">★</span><span class="on">★</span><span>☆</span><span>☆</span><span>☆</span>
                </div>
            }
            else if (foodItemRating == 3)
            {
                <div class="rating">
                    <span class="on">★</span><span class="on">★</span><span class="on">★</span><span>☆</span><span>☆</span>
                </div>
            }
            else if (foodItemRating == 4)
            {
                <div class="rating">
                    <span class="on">★</span><span class="on">★</span><span class="on">★</span><span class="on">★</span><span>☆</span>
                </div>
            }
            else if (foodItemRating == 5)
            {
                <div class="rating">
                    <span class="on">★</span><span class="on">★</span><span class="on">★</span><span class="on">★</span><span class="on">★</span>
                </div>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Course.CourseType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DietaryRestriction.DietType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DietaryRestriction1.DietType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DietaryRestriction2.DietType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Review.UserID)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.FoodItemID }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.FoodItemID }) |*@
            @Html.ActionLink("Delete", "Delete", new { id=item.FoodItemID })
        </td>
    </tr>
}

</table>
