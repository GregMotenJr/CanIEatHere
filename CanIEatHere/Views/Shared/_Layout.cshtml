

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Can I Eat Here</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/knockout-3.4.2.js"></script>
    <script src="~/Scripts/knockout.mapping-latest.js"></script>
    <script type="text/javascript" src="https://static.filestackapi.com/v3/filestack.js"></script>
    <script src="~/Scripts/imageUploader.js"></script>
    <link href="~/Views/Shared/sharedCSS.css" rel="stylesheet" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <link href="~/Content/animate.css" rel="stylesheet" />
    <link href="~/Content/image-styling.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/custom-layout.css" />
    <link href="~/Content/RestaurantIndexStyling.css" rel="stylesheet" />
    <link href="~/Content/custom-REVIEW.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Lobster|Open+Sans" rel="stylesheet">
</head>
<body>

    @*Commented logo, in case needed later:*@
    @*<div class="row">
        <img class="img-responsive center-block" src="~/Content/logo1.png" />
    </div>*@

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <img src="~/Content/logo2.png" class="img-responsive navbar-brand" />
                @Html.ActionLink("Can I Eat Here?", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Restaurants", "Index", "Restaurants")</li> @*LINK TO 'ADD RESTAURANT' PAGE*@
                    <li>@Html.ActionLink("Create A Review", "Create", "Reviews")</li>
                    <li></li>
                </ul>
                <!-- A search bar for the nav if we want it-->

                @*<div class="input-group">
                    <input type="text" class="form-control" placeholder="Search">
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                    </div>
                </div>*@

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()

        @*Commented footer until needed, later:*@
        @*<hr />*@
        @*<footer>
            <p>&copy; @DateTime.Now.Year - Can I Eat Here</p>
        </footer>*@

    </div>

   
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
